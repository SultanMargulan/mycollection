<h1 class="mt-4 mb-3">Top Collections</h1>

<% if @top_collections.present? %>
  <% @top_collections.each_with_index do |collection, index| %>
    <div class="col-md-4 mb-3">
      <%= render collection, class: "card" %>
      <p class="mt-2">
        <%= link_to "Show this collection", collection, class: "btn btn-secondary" %>
      </p>
      <%= link_to "New collection", new_collection_path, class: "btn btn-success mt-3" %>
    </div>
  <% end %>
<% else %>
  <p>No top collections found.</p>
<% end %>
